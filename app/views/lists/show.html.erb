<h1>Show individual list</h1>

<div class="container">
<p><%= @list.name %></p>

<%= link_to "All Lists", lists_path, class: "btn btn-primary" %>
<%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
